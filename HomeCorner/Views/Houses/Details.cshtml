@model HomeCorner.ViewModels.HousesViewModel


@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Details</h2>

<div>
    <h4>House</h4>
    <hr />
    <dl class="dl-horizontal">

        @Html.Partial("_HousesDataTable", Model.House)

        <dt>
            @Html.DisplayNameFor(model => model.AllFeatures)
        </dt>

        @if (Model.AllFeatures == null)
        {
            <dd>No Features</dd>
        }
        else
        {
            foreach (var feature in Model.SelectedFeatures)
            {
            <dt>
                @Html.ListBox("Id", new SelectList(Model.AllFeatures, "Id", "Feature"))
            </dt>
            }
        }
        <dt>
            @Html.ActionLink("Edit", "Edit", new { id = Model.House.Id }) |
            @Html.ActionLink("Back to List", "Index")

        </dt>
    </dl>
    </div>
        
