<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">
</head>
<body id="main-body">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("HomeCorner", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav mr-auto">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Profile", "Profile", "Home", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Search", "Search", "Home", null, new { @class = "nav-link" })</li>

                    <li>@Html.ActionLink("About Us", "AboutUS", "Home", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact Us", "ContactUs", "Home", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("LogOut", "Index", "Home", null, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-lg-4 col-sm-8">
                    <div>
                        @Html.ActionLink("HomeCorner", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="text-center">
                        Our team will go the extra mile to analyze the particular project in detail, and offer a business solution that will meet your requirements.
                    </div>
                    <p class="mt-3">&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                </div>
                <div class="col-lg-4 col-sm-8">
                    <div class="row">
                        <div class="col-lg-4">
                            <ul class="list-group list-group-flush list-unstyled">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("Profile", "Profile", "Home")</li>
                            </ul>
                        </div>
                        <div class="col-lg-4">
                            <ul class="list-group list-group-flush list-unstyled">
                                <li>@Html.ActionLink("Search", "Search", "Home")</li>
                                <li>@Html.ActionLink("About Us", "AboutUs", "Home")</li>
                            </ul>
                        </div>
                        <div class="col-lg-4">
                            <ul class="list-group list-group-flush list-unstyled">
                                <li>@Html.ActionLink("Contact Us", "ContactUs", "Home")</li>
                                <li>@Html.ActionLink("LogOut", "Index", "Home")</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-8 text-md-right text-lg-right">
                    <h4>Follow Us</h4>
                    <div>
                        <a href="https://www.facebook.com/" class="fab fa-facebook-square"></a>
                        <a href="https://twitter.com/" class="fab fa-twitter-square"></a>
                        <a href="https://www.linkedin.com/" class="fab fa-linkedin"></a>
                        <a href="https://github.com/" class="fab fa-github-square"></a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
